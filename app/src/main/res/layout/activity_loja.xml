<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LojaActivity">
    <LinearLayout
        android:id="@+id/llGeral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/ivImages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_play"
            android:minHeight="150dp"
            android:minWidth="200dp"
            android:maxWidth="400dp"
            android:maxHeight="200dp"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/tvNomeLoja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="@string/exemplo_NomeLoja"
            android:textAlignment="center"/>

        <LinearLayout
            android:id="@+id/llAvaliacao"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_margin="20dp">
            <ImageView
                android:id="@+id/ivAvEstrela01"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/img_vector_star_yellow" />
            <ImageView
                android:id="@+id/ivAvEstrela02"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/img_vector_star_yellow"  />
            <ImageView
                android:id="@+id/ivAvEstrela03"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/img_vector_star_yellow" />
            <ImageView
                android:id="@+id/ivAvEstrela04"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/img_vector_star_gray" />
            <ImageView
                android:id="@+id/ivAvEstrela05"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/img_vector_star_gray" />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:importantForAutofill="auto" />
            <TextView
                android:id="@+id/tvVerCardapio"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/loja_VerCardapio"
                android:textStyle="italic"
                android:textSize="18dp"
                android:textAlignment="gravity"
                android:textColor="@color/black"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llAddress"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:outlineAmbientShadowColor="@color/black"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvEndereco"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:maxWidth="200dp"
                android:layout_margin="10dp"
                android:text="@string/exemplo_endereco_loja"
                android:textSize="18dp"
                android:textColor="@color/black" />

            <androidx.fragment.app.FragmentContainerView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".fragments.RestauranteLocalizacaoFragment"

                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/llMidiasSociais"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_margin="10dp" >

            <ImageView
                android:id="@+id/ivFacebook"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:maxWidth="48dp"
                android:maxHeight="48dp"
                android:layout_marginHorizontal="5pt"
                android:src="@drawable/img_vector_logo_facebook" />

            <ImageView
                android:id="@+id/ivInstagram"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:maxWidth="48dp"
                android:maxHeight="48dp"
                android:layout_marginHorizontal="5pt"
                android:src="@drawable/img_vector_logo_instagram_gray" />

            <ImageView
                android:id="@+id/ivWhatsapp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:maxWidth="48dp"
                android:maxHeight="48dp"
                android:layout_marginHorizontal="5pt"
                android:src="@drawable/img_vector_logo_whatsapp" />

            <ImageView
                android:id="@+id/ivYoutube"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:maxWidth="48dp"
                android:maxHeight="48dp"
                android:layout_marginHorizontal="5pt"
                android:src="@drawable/img_vector_logo_youtube" />


        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigationView"
        app:headerLayout="@layout/menu_lateral_header"
        app:menu="@menu/main_menu"
        android:fitsSystemWindows="true"
        android:layout_gravity="start">
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>